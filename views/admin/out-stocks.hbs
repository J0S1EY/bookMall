<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Book</th>
                <th scope="col">Author</th>
                <th scope="col">Category</th>
                <th scope="col">Publishing Date</th>
                <th scope="col">Language</th>
                <th scope="col">Units</th>
                <th scope="col">Cover</th>
            </tr>
        </thead>
        <tbody>
            {{#each fruits}}
            <tr>
                <th scope="row">{{@ index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.family}}</td>
                <td>{{this.genus}}</td>
                <td>{{this.genus}}</td>
                <td>{{this.genus}}</td>
                <td>{{this.genus}}</td>
                <td><img style="width: 50px; height: 50px" src="{{this.img}}"></td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>