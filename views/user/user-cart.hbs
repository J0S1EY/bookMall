<script src="/javascripts/ajax.js"></script>
<link rel='stylesheet' href='/stylesheets/cart.css' />
<div class="container">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-md-9">
                <div class="ibox">
                    <div class="ibox-title">
                        <span id="cartCount" class="pull-right"><strong>{{cartCount}}</strong></span> items
                        <h5>Items in your cart</h5>
                    </div>
                    <div class="ibox-content">
                        {{#if cartProduct}}
                        <div class="table-responsive">
                            {{#each cartProduct}}
                            <table class="table shoping-cart-table">
                                <tbody>
                                    <tr>

                                        <td width="90">
                                            <div class="cart-product-imitation">
                                                <img src="/images/bookImg/{{this.product._id}}.jpeg" alt=""
                                                    height="75px" width="75px">
                                            </div>
                                        </td>
                                        <td class="desc">
                                            <h3>
                                                <a href="#" class="text-navy">
                                                    {{this.product.bookName}}
                                                </a>
                                            </h3>

                                            <dl class="small m-b-none">
                                                <dt>Author:</dt>
                                                <dd>{{this.product.author}}</dd>
                                            </dl>
                                            <dl class="small m-b-none">
                                                <dt>Category</dt>
                                                <dd>{{this.product.category}}</dd>
                                            </dl>
                                            <h3>Summary</h3>
                                            <p class="small">
                                                {{this.product.bookSummary}}
                                            </p>
                                        </td>
                                        <td width="100">
                                           Price: ${{this.product.price}}
                                           <br>
                                           Total: $<span class="small text-muted" id="{{this.product._id}}price">{{this.total}}</span>
                                            {{!-- <s class="small text-muted">$230,00</s> --}}
                                        </td>
                                        <td width="50"> 
                                            <div class="quantity">
                                                <button class="minus" aria-label="Decrease"
                                                    onclick="changeQuantity('{{../userId}}','{{this.product.price}}','{{this._id}}','{{this.product._id}}',-1)">&minus;</button>
                                                {{!-- <input id="{{this.product._id}}" type="number" class="input-box"
                                                    value={{this.quantity}} min="1" max="10"> --}}
                                                <span class="input-box"
                                                    id="{{this.product._id}}">{{this.quantity}}</span>
                                                <button class="plus" aria-label="Increase"
                                                    onclick="changeQuantity('{{../userId}}','{{this.product.price}}','{{this._id}}','{{this.product._id}}',1)">&plus;</button>
                                            </div>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                            <div class="m-t-sm" style="float: right;">
                                <a href="#" class="text-muted"><i class="fa fa-gift"></i> Add gift
                                    package</a>

                                <a href="#" class="text-muted"><i class="fa fa-trash"></i> Remove
                                    item</a>
                            </div>
                            <br>
                            <hr>
                            {{/each}}
                        </div>
                        {{else}}
                        <h3>Cart Empty</h3>
                        {{/if}}
                    </div>
                    <div class="ibox-content">
                        <button class="btn btn-primary pull-right"><i class="fa fa fa-shopping-cart"></i>
                            Checkout</button>
                        <button class="btn btn-white"> <i class="fa fa-arrow-left"></i>
                            <a href="/" style="text-decoration: none;"> Continue shopping </a>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Cart Summary</h5>
                    </div>
                    <div class="ibox-content">
                        
                        <h2 class="font-bold">
                         Total: $<span id="totalValue">{{cartTotal}}</span> 
                        </h2>

                        <hr>
                        <span class="text-muted small">
                            *For United States, France and Germany applicable sales tax will be applied
                        </span>
                        <div class="m-t-sm">
                            <div class="btn-group">
                                <a href="/user-checkOut" class="btn btn-primary btn-sm"><i
                                        class="fa fa-shopping-cart"></i>
                                    Checkout</a>
                                <a href="#" class="btn btn-white btn-sm"> Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Support</h5>
                    </div>
                    <div class="ibox-content text-center">
                        <h3><i class="fa fa-phone"></i> +43 100 783 001</h3>
                        <span class="small">
                            Please contact with us if you have any questions. We are avalible 24h.
                        </span>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-content">
                        <p class="font-bold">
                            Other products you may be interested
                        </p>
                        <hr>
                        <div>
                            <a href="#" class="product-name"> Product 1</a>
                            <div class="small m-t-xs">
                                Many desktop publishing packages and web page editors now.
                            </div>
                            <div class="m-t text-righ">
                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i
                                        class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                        <hr>
                        <div>
                            <a href="#" class="product-name"> Product 2</a>
                            <div class="small m-t-xs">
                                Many desktop publishing packages and web page editors now.
                            </div>
                            <div class="m-t text-righ">

                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i
                                        class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>