<script>
    let container = document.querySelector('.scroll-container');
    let scrollAmount = 0;
    const scrollIncrement = 2; // Adjust scrolling speed
    let isScrolling = true;

    function autoScroll() {
        if (isScrolling) {
            container.scrollLeft += scrollIncrement;
            scrollAmount += scrollIncrement;
            if (scrollAmount >= container.scrollWidth - container.clientWidth) {
                scrollAmount = 0;
                container.scrollLeft = 0;
            }
        }
    }

    setInterval(autoScroll, 50); // Adjust auto-scroll speed

    // Toggle scrolling on click
    container.addEventListener('click', function () {
        isScrolling = !isScrolling;
    });


    document.addEventListener("DOMContentLoaded", function () {
        const quantityInput = document.getElementById("quantityInput");
        const minusButton = document.getElementById("minusButton");
        const plusButton = document.getElementById("plusButton");

        minusButton.addEventListener("click", function () {
            // Decrease value by 1, unless it's already at the minimum
            if (parseInt(quantityInput.value) > 1) {
                quantityInput.value = parseInt(quantityInput.value) - 1;
            }
        });

        plusButton.addEventListener("click", function () {
            // Increase value by 1, unless it's already at the maximum
            if (parseInt(quantityInput.value) < 10) {
                quantityInput.value = parseInt(quantityInput.value) + 1;
            }
        });
    });

