    function addCart(productId) {
        let quantity = document.getElementById("quantityInput").value;

        // Show spinner before sending the AJAX request
        $('#spinner').show();

        $.ajax({
            url: '/add-to-cart',
            method: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            beforeSend: function () {
                // Show spinner before sending the AJAX request
                $('#spinner').show();
            },
            success: function (response) {
                // Handle the success response here
                alert("Product added to cart successfully.");
                // Optionally, you can redirect the user to another page or update the UI based on the response.
            },
            error: function (xhr, status, error) {
                // Handle the error response here
                alert("Error adding product to cart. Please try again later.");
                // Optionally, you can display a more detailed error message or take other actions based on the error.
            },
            complete: function () {
                // Hide spinner after the AJAX request is complete
                $('#spinner').hide();
            }
        });
    }






</script>